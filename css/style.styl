@import "../node_modules/flexiblegs-stylus/flexiblegs-stylus"

millennial = #025D8C
walken = #DADBDE
world = #02517A

vendor(prop, args)
	-webkit-{prop} args
	   -moz-{prop} args
	    -ms-{prop} args
	     -o-{prop} args
	        {prop} args

animation()
	vendor("animation", arguments)

border-radius()
	vendor("border-radius", arguments)

box-shadow()
	vendor("box-shadow", arguments)

text-shadow()
	vendor("text-shadow", arguments)

transition()
	vendor("transition", arguments)

transform()
	vendor("transform", arguments)

transform-origin()
	vendor("transform-origin", arguments)

user-select()
	vendor("user-select", arguments)

background-linear-gradient(startPoint, startColor, startInterval, endColor, endInterval, deprecatedWebkitStartPoint = false, deprecatedWebkitEndPoint = false)
	background-color startColor
	if deprecatedWebkitStartPoint && deprecatedWebkitEndPoint
		background-image -webkit-gradient(linear, deprecatedWebkitStartPoint, deprecatedWebkitEndPoint, color-stop(startInterval, startColor), color-stop(endInterval, endColor))
	background-image -webkit-linear-gradient(startPoint, startColor startInterval, endColor endInterval)
	background-image -moz-linear-gradient(startPoint, startColor startInterval, endColor endInterval)
	background-image -ms-linear-gradient(startPoint, startColor startInterval, endColor endInterval)
	background-image -o-linear-gradient(startPoint, startColor startInterval, endColor endInterval)
	background-image linear-gradient(startPoint, startColor startInterval, endColor endInterval)
	
@keyframes showLeft
	from
		left -100px
		opacity 0
	to
		left 0px
		opacity 1
		
body
	wrap()
	wrap("flexbox")
	wrap("top")
	background-color white
	font-family "Titillium Web", sans-serif
	height 100%
	margin 0
	padding 0
	width 100%
	
html
	height 100%
	width 100%
	
.content
	col()
	col(2,3)
	height 100%
	overflow-y auto
	padding 2rem
	
	.archive
		padding 1rem
		
		article
			color darken(walken, 50%)
			padding 1rem 0
			border-bottom 1px solid walken
			
			&:last-child
				border-bottom 0
			
			h3
				color darken(walken, 90%)
				font-weight 600
				line-height 1rem
				margin 1rem 0

			.date
				display block
				font-size 12px
	
	.site-nav
		ul
			list-style none
			margin 0
			padding 0
			
			li
				display inline-block
				
				a
					border-bottom 1px solid white
					color darken(walken, 50%)
					display block
					padding 1.5rem 1rem
					text-decoration none !important
					
					&:hover, &.active
						border-bottom 1px solid world
						color world
						
	.about
		h3
			color millennial
			margin 0.5rem
			text-transform uppercase
			
			span
				display inline-block
				margin-right 1rem
				vertical-align middle
			
		.cols
			wrap()
			wrap("flexbox")
			wrap("top")
			
			.one_of_two
				col()
				col(1,2)
				
		.education
			color darken(walken, 50%)
			list-style none
			margin 0
			padding 0
			
			li
				padding 0.5 rem
				
			.title
				color darken(walken, 90%)
				font-weight bold
			
		.experience
			border-collapse collapse
			color darken(walken, 50%)
			
			td
				padding 0.5rem 1rem
				vertical-align top
				
			.key
				min-width 200px
				
			.title
				color darken(walken, 90%)
				font-weight bold
				
		.skills
			color darken(walken, 50%)
			list-style none
			margin 0
			padding 0
			
			li
				padding 0.5rem
				
			.bar
				background walken
				border-radius( 4px )
				height 8px
				margin 0.5rem 0
				overflow hidden
				
				.progress
					background lighten(millennial, 20%)
					height 100%
					width 50%
					
					&._10
						width 10%
						
					&._25
						width 25%
						
					&._65
						width 65%
						
					&._75
						background lighten(millennial, 25%)
						width 75%
						
					&._85
						background lighten(millennial, 30%)
						width 90%
						
					&._95
						background lighten(millennial, 35%)
						width 95%
						
					&.complete
						background lighten(millennial, 40%)
						width 100%

.kevin
	col()
	col(1,3)
	background-linear-gradient(bottom, darken(walken, 5%), 0%, darken(walken, 35%), 100%)
	height 100%
	overflow-y hidden
	position relative
	
	.contact
		left 0
		position absolute
		top 110px
		width 100%
		
		ul
			list-style none
			margin 0
			padding 0
			text-align center
			
			li
				display inline-block
				font-size 1.5rem
				padding 0.5rem 0.75rem
				
				a
					color white
					text-decoration none
					
					&:hover
						text-shadow(0 0 5px rgba(black,0.5))
	
	.logo
		background url("/img/ninja.png") center no-repeat
		background-size contain
		height 75px
		left 50%
		margin-left -105px
		position absolute
		top 20px
		width 210px
	
	.photo
		background url("/img/i.png") center bottom no-repeat
		background-size contain
		bottom -110px
		height 100%
		left 2%
		position absolute
		width 96%
		
	.who
		background-linear-gradient(top, transparent, 0%, rgba(black, 0.75), 100%)
		color darken(walken, 5%)
		font-size 14px
		padding 2rem 2rem 0.5rem
		position absolute
		text-align center
		text-shadow( 2px 2px 5px rgba(black, 0.5))
		bottom 0px
		
		h2, h3
			color white
			line-height 1rem
			margin 0.75rem 0
			
		h2
			font-size 26px
			
		h3
			font-weight 600
			
		.hire
			background transparent
			border 2px solid white
			border-radius(2rem)
			color white
			cursor pointer
			display inline-block
			margin 1rem auto
			padding 0.75rem 2rem
			text-decoration none
			text-shadow( none )
			
			&:hover
				background white
				color black
				font-weight bold
