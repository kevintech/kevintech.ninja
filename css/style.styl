			border-bottom none
			box-shadow(none)
			padding 0

		@media only screen and (min-device-width: 320px) and (max-device-width: 667px) and (orientation: landscape)
			background none
			border-bottom none
			box-shadow(none)
			padding paragraphFontSize

		p
			line-height 1.65em

.education
	height auto
	min-height 100%
	padding 2*headingFontSize 8*headingFontSize

	@media only screen and (min-device-width: 320px) and (max-device-width: 667px) and (orientation: portrait)
		padding headingFontSize 2*headingFontSize

	@media only screen and (min-device-width: 320px) and (max-device-width: 667px) and (orientation: landscape)
		padding headingFontSize 2.5*headingFontSize

	&__timeline
