@import "../node_modules/flexiblegs-stylus/flexiblegs-stylus"

millennial = #0399e7
notWhite = #FAFAFA
notBlack = #333333
headingFontSize = 20px
paragraphFontSize = 16px

vendor(prop, args)
	-webkit-{prop} args
	   -moz-{prop} args
	    -ms-{prop} args
	     -o-{prop} args
	        {prop} args

animation()
	vendor("animation", arguments)

border-radius()
	vendor("border-radius", arguments)

box-shadow()
	vendor("box-shadow", arguments)

text-shadow()
	vendor("text-shadow", arguments)

transition()
	vendor("transition", arguments)

transform()
	vendor("transform", arguments)

transform-origin()
	vendor("transform-origin", arguments)

user-select()
	vendor("user-select", arguments)

background-linear-gradient(startPoint, startColor, startInterval, endColor, endInterval, deprecatedWebkitStartPoint = false, deprecatedWebkitEndPoint = false)
	background-color startColor
	if deprecatedWebkitStartPoint && deprecatedWebkitEndPoint
		background-image -webkit-gradient(linear, deprecatedWebkitStartPoint, deprecatedWebkitEndPoint, color-stop(startInterval, startColor), color-stop(endInterval, endColor))
	background-image -webkit-linear-gradient(startPoint, startColor startInterval, endColor endInterval)
	background-image -moz-linear-gradient(startPoint, startColor startInterval, endColor endInterval)
	background-image -ms-linear-gradient(startPoint, startColor startInterval, endColor endInterval)
	background-image -o-linear-gradient(startPoint, startColor startInterval, endColor endInterval)
	background-image linear-gradient(startPoint, startColor startInterval, endColor endInterval)
		
body
	wrap()
	wrap("normal")
	wrap("top")
	background-color white
	font-family "Open Sans", sans-serif
	height 100%
	margin 0
	padding 0
	width 100%
	
html
	height 100%
	width 100%

.content-full-area
	col()
	col(1,1)
	background notWhite
	height 100%

	@media only screen and (min-device-width: 320px) and (max-device-width: 667px) and (orientation: portrait)
		height auto
		min-height 100%

	@media only screen and (min-device-width: 320px) and (max-device-width: 667px) and (orientation: landscape)
		height auto
		min-height 100%

	h2
		color millennial
		font-size 1.5*headingFontSize
		font-weight 600
		padding 0.5*paragraphFontSize paragraphFontSize
		position relative
		text-align center
		text-transform uppercase

		@media only screen and (min-device-width: 320px) and (max-device-width: 667px) and (orientation: portrait)
			font-size 1.25*headingFontSize

		@media only screen and (min-device-width: 320px) and (max-device-width: 667px) and (orientation: landscape)
			font-size 1.25*paragraphFontSize

		&:after
			background millennial
			border-radius(4px)
			content "-"
			display block
			font-size 0
			margin 10px auto 0
			height 4px
			width 100px

			@media only screen and (min-device-width: 320px) and (max-device-width: 667px) and (orientation: portrait)
				height 2px

.cover
	padding 4*headingFontSize 8*headingFontSize

	@media only screen and (min-device-width: 320px) and (max-device-width: 667px) and (orientation: portrait)
		padding 2*headingFontSize 2*headingFontSize

	@media only screen and (min-device-width: 320px) and (max-device-width: 667px) and (orientation: landscape)
		padding 2*paragraphFontSize 2*paragraphFontSize

	&__box-content
		background white
		border-bottom 5px solid millennial
		box-shadow(5px 5px 20px rgba(black,15%))
		padding 2*headingFontSize 3*headingFontSize

