	&__contact-btn
		background millennial
		border-radius(2em)
		box-shadow(8px 8px 40px rgba(millennial,0.5))
		color white
		cursor pointer
		display inline-block
		font-size 1.25*paragraphFontSize
		margin 1em auto
		padding 0.75em 2em
